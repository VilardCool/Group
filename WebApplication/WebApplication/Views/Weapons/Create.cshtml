@model WebApplication.Weapon

@{
    ViewData["Title"] = "Create";
}

<h1>Додати зброю певного типу</h1>

<h4>@ViewBag.WeaponTypeName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Damage" class="control-label"></label>
                <input asp-for="Damage" class="form-control" />
                <span asp-validation-for="Damage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Magazine" class="control-label"></label>
                <input asp-for="Magazine" class="form-control" />
                <span asp-validation-for="Magazine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RateOfFire" class="control-label"></label>
                <input asp-for="RateOfFire" class="form-control" />
                <span asp-validation-for="RateOfFire" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TypeId" class="control-label"></label>
                <select asp-for="TypeId" class="form-control" asp-items="@ViewBag.TypeId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
